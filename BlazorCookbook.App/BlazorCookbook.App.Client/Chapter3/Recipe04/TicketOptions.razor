
<button class="btn btn-sm btn-success" @onclick="@OnShow">
    Show
</button>

<button class="btn btn-sm btn-info" @onclick="@OnTopUp">
    Top Up
</button>

<button class="btn btn-sm btn-danger" @onclick="@OnRemove">
    Remove
</button>

@code {
    
    [Parameter, EditorRequired] 
    public EventCallback OnShow { get; set; } // invokes statehaschanged automatically

    [Parameter, EditorRequired]
    public EventCallback OnTopUp { get; set; } // invokes statehaschanged automatically

    [Parameter, EditorRequired]
    public EventCallback OnRemove { get; set; } // invokes statehaschanged automatically

}
