@using BlazorCookbook.App.Client.Recipe06
<div class="ticket">
    <div class="name">@Tariff</div>
    <div class="price">@(Price.ToString("0.00 $"))</div>
    <div class="ticket-actions">
        <button @onclick="@Add">Add to Cart</button>
    </div>
</div>

@code {
    [CascadingParameter] public Cart Cart { get; set; } // derives value from parent (SellingTicket)
    [Parameter, EditorRequired] public string Tariff { get; set; }
    [Parameter, EditorRequired] public decimal Price { get; set; }
    public void Add() => Cart.Add(Tariff, Price);
}
